{% extends '_layout/layout.twig' %}

{% block content %}
    <div id="homePage" class="landing">
        <div class="homeContainer">
            <img src='../assets/images/logo.png' id="logo" alt="logo MyDropper">
            <h1>MyDropper.io</h1>
            <p>
                Welcome on My Dropper ! <br/>
                My Dropper is an extension designed for Google Chrome, and will help you to gain some time and store your data.
                You often use the same informations to fill forms on the Internet.
                Thanks to My Dropper, your data will be available any time and easily found, any time, whenever you need it.
            </p>

            {% if aside.name %}
                <a href="{{ url('/profile') }}" class="ghostBtn btnHome">
                    <span>My settings</span>
                </a>
                <a href="{{ url('/users/logout') }}" class="ghostBtn btnHome">
                    <span>Log out</span>
                </a>
            {% else %}
                <a href="{{ url('/users/login') }}" class="ghostBtn btnHome">
                    <span>Sign In</span>
                </a>
                <a href="{{ url('/users/subscribe') }}" class="ghostBtn btnHome">
                    <span>Sign Up</span>
                </a>
            {% endif %}

        </div>
        <footer>
            <ul>
                <li><a href="{{ url('/who-we-are') }}">Who we are ?</a></li>
                <li><a href="{{ url('/how-it-works') }}">How it works ?</a></li>
            </ul>
        </footer>
    </div>
{% endblock %}
